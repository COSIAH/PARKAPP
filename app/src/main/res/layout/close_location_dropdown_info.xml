<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


        <TextView
            android:id="@+id/availableLabel"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Rhr"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/availableText"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Rs.15/hr"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/availableLabel"
            app:layout_constraintTop_toTopOf="@+id/availableLabel" />


        <TextView
            android:id="@+id/outOfLabel"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:text="Rhr"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/availableLabel" />

        <TextView
            android:id="@+id/outOfText"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Rs.15/hr"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/outOfLabel"
            app:layout_constraintTop_toTopOf="@+id/outOfLabel" />

        <TextView
            android:id="@+id/priceLabel"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rhr"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="@+id/availableLabel"
            app:layout_constraintStart_toStartOf="@+id/availableLabel"
            app:layout_constraintTop_toBottomOf="@+id/availableLabel" />

        <TextView
            android:id="@+id/priceText"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rs.15/hr"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="@+id/availableText"
            app:layout_constraintStart_toStartOf="@+id/availableText"
            app:layout_constraintTop_toTopOf="@+id/priceLabel" />

        <TextView
            android:id="@+id/locationLabel"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rhr"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="@+id/outOfLabel"
            app:layout_constraintStart_toStartOf="@+id/outOfLabel"
            app:layout_constraintTop_toTopOf="@+id/priceLabel" />

        <TextView
            android:id="@+id/locationText"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rs.15/hr"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="@+id/outOfText"
            app:layout_constraintStart_toStartOf="@+id/outOfText"
            app:layout_constraintTop_toTopOf="@+id/locationLabel" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="75dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/priceLabel"
            app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.button.MaterialButton
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:text="Book" />
                <com.google.android.material.button.MaterialButton
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:text="more Details" />
                <com.google.android.material.button.MaterialButton
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maps" />

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>